    <script>
    $(document).ready(function () {
        const rowsPerPage = 15;
        let currentPage = 1;
        let userList = [];

        // 모달 열기
        $(".btn-load").click(function () {
            $("#modal-load").show();
            fetchUserList();
        });

        $(".btn-unload").click(function () {
            $("#modal-unload").show();
        });

        $(".btn-location").click(function () {
            $("#modal-location").show();
            $.ajax({
                url: "/api/unassigned-accounts",
                method: "GET",
                success: function (response) {
                    let tbody = $("#unassigned-accounts");
                    tbody.empty();
                    response.forEach(function (row) {
                        tbody.append(`
                            <tr>
                                <td>${row.ID}</td>
                                <td>${row.CAR}</td>
                                <td>${row.PHONE}</td>
                            </tr>
                        `);
                    });
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Error fetching unassigned accounts:', textStatus, errorThrown); // 오류 로그 출력
                    alert("권한미배정 계정을 가져오는 중 오류가 발생했습니다.");
                }
            });
        });

        // 모달 닫기
        $(".close").click(function () {
            $(this).closest(".modal").hide();
        });

        // 전체 회원 리스트 가져오기
        function fetchUserList() {
            $.ajax({
                url: "/api/user-list",
                method: "GET",
                success: function (response) {
                    userList = response;
                    displayUserList();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Error fetching user list:', textStatus, errorThrown); // 오류 로그 출력
                    alert("회원 리스트를 가져오는 중 오류가 발생했습니다.");
                }
            });
        }

        // 차량번호로 회원 검색
        $("#search-car-btn").click(function () {
            const car = $("#search-car").val();
            $.ajax({
                url: "/api/search-by-car",
                method: "POST",
                data: { car: car },
                success: function (response) {
                    userList = response;
                    displayUserList();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Error searching by car:', textStatus, errorThrown); // 오류 로그 출력
                    alert("차량번호로 회원 검색 중 오류가 발생했습니다.");
                }
            });
        });

        // 회원 리스트를 테이블에 표시
        function displayUserList() {
            let tbody = $("#user-list");
            tbody.empty();
            const totalPages = Math.ceil(userList.length / rowsPerPage);
            const startIndex = (currentPage - 1) * rowsPerPage;
            const endIndex = Math.min(startIndex + rowsPerPage, userList.length);

            for (let i = startIndex; i < endIndex; i++) {
                let user = userList[i];
                tbody.append(`
                    <tr>
                        <td>${i + 1}</td>
                        <td>${user.ID}</td>
                        <td>${user.PHONE}</td>
                        <td>${user.CAR}</td>
                        <td>${user.CAR_ID}</td>
                        <td>${user.SASI}</td>
                        <td>${user.PART}</td>
                        <td>${user.ROLE}</td>
                    </tr>
                `);
            }
            displayPagination(totalPages);
        }

        // 페이지네이션 표시
        function displayPagination(totalPages) {
            let pagination = $("#pagination");
            pagination.empty();
            for (let i = 1; i <= totalPages; i++) {
                pagination.append(`
                    <a href="#" class="page-link" data-page="${i}">${i}</a>
                `);
            }

            $(".page-link").click(function (e) {
                e.preventDefault();
                currentPage = $(this).data("page");
                displayUserList();
            });
        }

        // 사용자 검색
        $("#search-btn").click(function () {
            const userId = $("#search-id").val();
            $.ajax({
                url: "/api/search-user",
                method: "POST",
                data: { id: userId },
                success: function (response) {
                    $("#password").val(response.PASSWORD);
                    $("#phone").val(response.PHONE);
                    $("#car").val(response.CAR);
                    $("#car-id").val(response.CAR_ID);
                    $("#SASI").val(response.SASI);
                    $("#part").val(response.PART);
                    $("#role").val(response.ROLE);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Error searching user:', textStatus, errorThrown); // 오류 로그 출력
                    alert("사용자 정보를 찾을 수 없습니다.");
                }
            });
        });

        // 사용자 정보 업데이트
        $("#update-btn").click(function () {
            const userId = $("#search-id").val();
            const password = $("#password").val();
            const phone = $("#phone").val();
            const car = $("#car").val();
            const carId = $("#car-id").val();
            const SASI = $("#SASI").val();
            const part = $("#part").val();
            const role = $("#role").val();
            $.ajax({
                url: "/api/update-user",
                method: "POST",
                data: {
                    id: userId,
                    password: password,
                    phone: phone,
                    car: car,
                    carId: carId,
                    SASI: SASI,
                    part: part,
                    role: role
                },
                success: function () {
                    alert("사용자 정보가 업데이트되었습니다.");
                    $("#modal-unload").hide();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('Error updating user:', textStatus, errorThrown); // 오류 로그 출력
                    alert("업데이트 중 오류가 발생했습니다.");
                }
            });
        });
    });
    </script>
